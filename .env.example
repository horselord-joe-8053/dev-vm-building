# Environment Variables Template for Ubuntu GUI VM Deployment
# Copy this file to .env and fill in your values
# DO NOT commit .env files with secrets to version control

# ==============================================================================
# CLOUD PROVIDER SELECTION
# ==============================================================================
# Set to 'aws' or 'gcp' to select which cloud provider to deploy to
CLOUD_PROVIDER=aws

# ==============================================================================
# AWS CONFIGURATION (Required if CLOUD_PROVIDER=aws)
# ==============================================================================
# AWS Region (e.g., us-east-1, us-west-2)
AWS_REGION=us-east-1

# AWS Credentials (for AWS CLI and Terraform AWS provider)
# These can be prefixed with AWS_ADMIN_* in your main .env file
AWS_ADMIN_ACCESS_KEY_ID=YOUR_AWS_ADMIN_ACCESS_KEY_ID_HERE
AWS_ADMIN_SECRET_ACCESS_KEY=YOUR_AWS_ADMIN_SECRET_ACCESS_KEY_HERE

# Optional: AWS Profile name (if using AWS profiles)
AWS_PROFILE=admin  # For infrastructure scripts (default)

# Optional: AWS Bedrock configuration (if using Bedrock)
AWS_BEDROCK_ACCESS_KEY_ID=YOUR_AWS_BEDROCK_ACCESS_KEY_ID_HERE
AWS_BEDROCK_SECRET_ACCESS_KEY=YOUR_AWS_BEDROCK_SECRET_ACCESS_KEY_HERE
AWS_BEDROCK_INFERENCE_PROFILE_ID=us.anthropic.claude-3-5-haiku-20241022-v1:0
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-5-haiku-20241022-v1:0

# Optional: Terraform state bucket (if using remote state)
TF_STATE_BUCKET=fru-terraform-state-744139897900

# Optional: Image prefix (if using custom AMIs)
IMAGE_PREFIX=fru-api-img-default-prefix

# ==============================================================================
# AWS VM CONFIGURATION (Optional - defaults used if not set)
# ==============================================================================
# EC2 Instance Type (e.g., t3.large, t3.xlarge)
AWS_INSTANCE_TYPE=t3.large

# Root EBS Volume Size in GB
AWS_ROOT_VOLUME_GB=80

# CIDR block allowed to access SSH (22) and RDP (3389)
# Recommended: Set to your public IP/32 (e.g., 1.2.3.4/32)
# Use: curl ifconfig.me to find your IP
AWS_ALLOWED_CIDR=0.0.0.0/0

# Use Spot Instances (true/false)
AWS_USE_SPOT=true

# Optional: Maximum Spot price (empty = on-demand cap)
# Specify in dollars per hour (e.g., 0.10 = $0.10/hour)
# Useful if you want a hard cost cap below on-demand
# Check current spot prices first: AWS Console → EC2 → Spot Requests → Pricing History
# Example:
#   t3.large on-demand: ~$0.0832/hour (us-east-1)
#   Spot price typically: ~$0.025–0.050/hour (varies)
AWS_SPOT_MAX_PRICE=

# Resource name prefix
AWS_NAME_PREFIX=ubuntu-gui

# ==============================================================================
# GCP CONFIGURATION (Required if CLOUD_PROVIDER=gcp)
# ==============================================================================
# GCP Project ID (required)
GCP_PROJECT_ID=your-gcp-project-id

# GCP Region (e.g., us-central1, us-east1)
GCP_REGION=us-central1

# GCP Zone (e.g., us-central1-a, us-east1-b)
GCP_ZONE=us-central1-a

# Optional: Path to GCP service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=

# ==============================================================================
# GCP VM CONFIGURATION (Optional - defaults used if not set)
# ==============================================================================
# GCP Machine Type (e.g., e2-standard-2, e2-standard-4)
GCP_MACHINE_TYPE=e2-standard-2

# Boot Disk Size in GB
GCP_BOOT_DISK_GB=80

# CIDR block allowed to access SSH (22) and RDP (3389)
# Recommended: Set to your public IP/32 (e.g., 1.2.3.4/32)
GCP_ALLOWED_CIDR=0.0.0.0/0

# Use Spot Instances (true/false)
GCP_USE_SPOT=true

# Resource name prefix
GCP_NAME_PREFIX=ubuntu-gui

# ==============================================================================
# COMMON CONFIGURATION (Applies to both AWS and GCP)
# ==============================================================================
# RDP Password (REQUIRED - use a strong password)
RDP_PASSWORD=Rdp@pwd26

# Linux username for SSH + RDP
DEV_USERNAME=dev_admin

# ==============================================================================
# SOFTWARE VERSIONS (Optional - defaults used if not set)
# ==============================================================================
# Git version (best effort)
GIT_VERSION=2.39.2

# Python version to install via pyenv
PYTHON_VERSION=3.11.13

# Node.js version to install via nvm
NODE_VERSION=v23.5.0

# npm version to install globally
NPM_VERSION=11.6.0

# Docker Engine version prefix (best effort)
DOCKER_VERSION_PREFIX=28.4.0

# AWS CLI v2 version
AWSCLI_VERSION=2.32.16

# PostgreSQL client major version
PSQL_MAJOR=16

# Cursor channel (use 'stable')
CURSOR_CHANNEL=stable
